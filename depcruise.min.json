{
    "$schema": "https://json.schemastore.org/dependency-cruiser.json",
    "options": {
        "tsConfig": { "fileName": "tsconfig.json" },
        "enhancedResolveOptions": {
            "extensions": [
                ".ts",
                ".tsx",
                ".js",
                ".jsx",
                ".scss",
                ".css",
                ".json"
            ]
        },
        "doNotFollow": { "path": "node_modules|^\\.next" }
    }
}
