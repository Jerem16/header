{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["app/*"],
      "@src/*": ["src/*"],
      "@amplify/*": ["amplify/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@context/*": ["src/context/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@services/*": ["src/services/*"],
      "@myTypes/*": ["src/types/*"],
      "@entities/*": ["src/entities/*"],
      "@public/*": ["public/*"],
      "@nav/*": ["src/features/navigation/*"],
      "@nav-data/*": ["src/features/navigation/data/*"],
      "@nav-types/*": ["src/features/navigation/types/*"],
      "@nav-utils/*": ["src/features/navigation/utils/*"],
      "@nav-components/*": ["src/features/navigation/components/*"],
      "@nav-icons/*": ["src/features/navigation/icons/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "public/**/*.json",
    ".next/types/**/*.ts",
    "src/components/frames/Frames.jsx"
  ],
  "exclude": ["node_modules", ".next", "dist"]
}
